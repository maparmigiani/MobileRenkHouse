<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardView"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="504dp">

            <ImageView
                android:id="@+id/imageViewRow"
                android:layout_width="246dp"
                android:layout_height="265dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="65dp"
                app:srcCompat="@drawable/condominium2" />

            <TextView
                android:id="@+id/txtViewAddress"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewRow"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="260dp"
                android:layout_marginTop="-179dp"
                android:layout_marginEnd="4dp"
                android:text="TextView"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txtViewImgPath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtViewPrice"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="245dp"
                android:layout_marginEnd="3dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtViewPrice"
                android:layout_width="146dp"
                android:layout_height="35dp"
                android:layout_below="@+id/txtViewAddress"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="260dp"
                android:layout_marginTop="51dp"
                android:layout_marginEnd="4dp"
                android:text="TextView"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/lblVisit"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-203dp"
                android:layout_marginTop="357dp"
                android:layout_toEndOf="@+id/imageViewRow"
                android:text="Select your type of visit:"
                android:textSize="25dp" />

            <CheckBox
                android:id="@+id/chkVirtual"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblVisit"
                android:layout_marginStart="-195dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/imageViewRow"
                android:text="Virtual Visit" />

            <CheckBox
                android:id="@+id/chkInPerson"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_below="@+id/imageViewRow"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="78dp"
                android:layout_marginBottom="60dp"
                android:layout_toEndOf="@+id/chkVirtual"
                android:text="In person" />


            <TextView
                android:id="@+id/textViewCity"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="228dp"
                android:layout_marginBottom="449dp"
                android:text="Toronto"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="145dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="259dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="272dp"
                android:text="Price:"
                android:textColor="@color/purple_500"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="145dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="259dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="358dp"
                android:text="Address:"
                android:textColor="@color/purple_500"
                android:textSize="25dp"
                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>